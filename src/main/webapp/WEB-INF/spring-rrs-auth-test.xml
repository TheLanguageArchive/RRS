<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE beans PUBLIC 
	"-//SPRING//DTD BEAN//EN" 
	"http://www.springframework.org/dtd/spring-beans.dtd">

<beans>

    <bean id="authenticationProvider" class="nl.mpi.rrs.model.utilities.DummyAuthenticationProvider">
        <property name="loggedIn" value="false" />
        <property name="firstName" value="John"/>
        <property name="lastName" value="Doe"/>
        <property name="userName" value="john.doe@example.com"/>
        <property name="organization" value="Example Co."/>
        <property name="email" value="t.goosen@gmail.com"/>

    </bean>

    <bean class="org.springframework.web.context.support.ServletContextAttributeExporter">
        <property name="attributes">
            <map>
                <entry key="authenticationProvider" value-ref="authenticationProvider"/>
            </map>
        </property>
    </bean>


