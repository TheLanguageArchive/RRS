<?xml version="1.0" encoding="UTF-8"?>

<!-- context configuration file for tomcat 5.0.x  -->

<Context
	path="/ds/RRS_V1" 
	docBase="/lat/webapps/RRS_V1"
	debug="0" 
	privileged="true" 
	reloadable="true" 
	crossContext="true" 
	>

	<Resource 
		name="jdbc/CSDB" 
		auth="Container" 
		type="javax.sql.DataSource" />
	
	<!-- Resource 
		name="jdbc/USERDB" 
		auth="Container" 
		type="javax.sql.DataSource" / -->
	
	<Resource 
		name="jdbc/AMS2DB" 
		auth="Container" 
		type="javax.sql.DataSource" />
	
	
	
	<ResourceParams name="jdbc/CSDB" >
		<parameter>
			<name>driverClassName</name>
			<value>org.postgresql.Driver</value>
		</parameter>
		<parameter>
			<name>url</name>
			<value>jdbc:postgresql://lux16.mpi.nl:5432/corpusstructure</value>
		</parameter>
		<parameter>
			<name>user</name>
			<value>webuser</value>
		</parameter>
		<parameter>
			<name>username</name>
			<value>webuser</value>
		</parameter>
		<parameter>
			<name>password</name>
			<value>start1a</value>
		</parameter>
	</ResourceParams>
	
	
